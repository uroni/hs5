{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "policies": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "document": {
                        "type": "string"
                    },
                    "system": {
                        "type": "boolean"
                    }
                },
                "required": ["id", "name", "document", "system"]
            }
        },
        "nextMarker": {
            "type": "string"
        },
        "isTruncated": {
            "type": "boolean"
        }
    },
    "required": ["policies", "nextMarker", "isTruncated"]
}
