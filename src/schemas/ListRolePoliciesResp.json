{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "rolePolicies": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "policyId": {
                        "type": "string"
                    },
                    "policyName": {
                        "type": "string"
                    }
                },
                "required": ["id", "policyId", "policyName"]
            }
        },
        "nextMarker": {
            "type": "string"
        },
        "isTruncated": {
            "type": "boolean"
        }
    },
    "required": ["rolePolicies", "nextMarker", "isTruncated"]
}
